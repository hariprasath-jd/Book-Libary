@model
@{
    ViewBag.Title = "AdminLoginPermission";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="no_scroll" style="max-height: 700px; overflow: scroll; overflow-x: hidden; width: 100%; scroll-behavior: smooth; overflow-y: scroll; -ms-overflow-style: none;">
    <h2 class="mx-5 my-3">All Genre</h2>
    <div class=" row justify-content-md-center no_scroll" style="max-height: 650px; overflow: scroll; overflow-x: hidden; width: 100%; scroll-behavior: smooth; overflow-y: scroll; -ms-overflow-style: none;">
        <div class="no_scroll"></div>
        <table class="table border rounded col mx-4" style="width:95%;">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Genre Id</th>
                    <th scope="col">Genre Type</th>
                    <th scope="col">Genre Description</th>
                    <th scope="col">Genre Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Book_Libary.Models.Inventory.Genre i in Model)
                {
                    <tr>
                        <td scope="col">@i.Id</td>
                        <td>@i.GerneType</td>
                        <td style="width:40%;max-width:200px;" class="text-truncate">@i.GenreDescription</td>
                        <td>
                            @Html.ActionLink("Update", "UpdateGenre", new { Id = i.Id })  ||
                            @Html.ActionLink("Delete", "DeleteId", new { Id = i.Id })
                        </td>
                    </tr>
                }



            </tbody>
        </table>
    </div>
</div>

