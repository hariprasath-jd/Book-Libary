
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    body {
        background-image: url('Images/Hexagon.svg');
        background-repeat: no-repeat;
        background-size:100vw 100vh;
    }
</style>
<div class="d-flex align-items-center py-4 bg-body-dark w-25  m-auto" style="height:700px;">
    <main class="form-signin w-75 m-auto text-secondary " data-bs-theme="dark">
        @using (Html.BeginForm("LoginValidate","Admin",FormMethod.Post))
        {
            <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

            <div class="form-floating">
                @Html.TextBox("Username", "", new { id = "UserName", placeholder = "name@example.com", Class = "form-control" })
                <label for="UserName">Email address</label>
                <p style="color:red">@ViewData["AdminWarning"].ToString()</p>
            </div>

            <div class="form-floating">
                @Html.TextBox("Password", "", new { id = "PassWord", placeholder = "password", Class = "form-control", Type = "password" })
                <label for="Password">Password</label>
                <p style="color:red">@ViewData["AdminPasswdWarning"].ToString()</p>
            </div>

            <div class="form-check text-start my-3">
                <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                    Remember me
                </label>
            </div>
            <button class="btn btn-primary w-100 py-2" type="submit">Sign in</button>
            <p class="mt-5 mb-3 text-body-secondary">© 2017–2023</p>
        }
    </main>
</div>
