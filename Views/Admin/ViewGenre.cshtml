@model List<Book_Libary.Models.Inventory.Genre>
@{
    ViewBag.Title = "ViewGenre";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (ViewBag.Validation == true)
{
<script type="text/javascript">
    $(window).on(function() {
        $('#staticBackdrop').modal('show');
    });
</script>
}
@if (ViewBag.Result == true)
{
<script type="text/javascript">
    $(window).on(function() {
        $('#myModal').modal('show');
    });
</script>
}

<div style="max-height: 700px; overflow: scroll; overflow-x: hidden; width: 100%; scroll-behavior: smooth; overflow-y: scroll; -ms-overflow-style: none;">
    <h2 class="mx-5 my-3">All Genre</h2>
    <div class=" row justify-content-md-center" style="max-height: 650px; overflow: scroll; overflow-x: hidden; width: 100%; scroll-behavior: smooth; overflow-y: scroll; -ms-overflow-style: none;">
        <div class=""></div>
        <table class="table border rounded col mx-4" style="width:95%;">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Genre Id</th>
                    <th scope="col">Genre Type</th>
                    <th scope="col">Genre Description</th>
                    <th scope="col">Genre Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Book_Libary.Models.Inventory.Genre i in Model)
                {
                    <tr>
                        <td scope="col">@i.Id</td>
                        <td>@i.GerneType</td>
                        <td style="width:40%;max-width:200px;" class="text-truncate">@i.GenreDescription</td>
                        <td>
                            @Html.ActionLink("Update", "UpdateSupplier", new { Id = i.Id })  ||
                            @Html.ActionLink("Delete", "DeleteId", new { Id = i.Id })
                        </td>
                    </tr>
                }



            </tbody>
        </table>
    </div>
    <div class="w-50 float-end">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-warning float-end me-5" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
            Add Genre
        </button>
    </div>



    <!-- Modal -->

    <div class="modal" id="validation">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Modal title</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Modal body text goes here.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade " id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="staticBackdropLabel">Genre</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                @using (Html.BeginForm("AddGenre","Admin",FormMethod.Post))
                {
                    <div class="modal-body">
                        <h2>Add Genre</h2>

                        <div class="row g-3 p-4">
                            <div class="col-4">
                                <label for="GenreName">Genre Name</label>
                            </div>
                            <div class="col-5">
                                @Html.TextBox("GenreName", "", new { Class = "form-control" })
                            </div>
                            <div class="col"></div>
                        </div>
                        <div class="row g-3">
                            <div class="col-4">
                                <label for="GenreDescription">Genre Description</label>
                            </div>
                            <div class="col-6">
                                @Html.TextArea("GenreDescription", "", new { Class = "form-control", rows = "4" })
                            </div>
                            <div class="col"></div>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Add</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
