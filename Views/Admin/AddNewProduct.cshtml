
@{
    ViewBag.Title = "AddNewProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="max-height: 700px; overflow: scroll; overflow-x: hidden; width: 100%; scroll-behavior: smooth; overflow-y: scroll; -ms-overflow-style: none;">
    <div class="container col-xl-1 col-xxl-11 px-2 py35">
        <div class="row align-items-center border g-lg-5 p-4  bg-secondary mt-1" style="border-radius:15px;">
            @using (Html.BeginForm("InfoRegister", "Login", FormMethod.Post))
            {
                <div class="row ">
                    <div class="col-md-6">
                        <h4>Product Details</h4>
                    </div>
                </div>

                <hr style="width:150px;" />
                <div class="row g-3">
                    <div class="col-2">
                        <label class="form-label" for="ProductName">Product Name</label>
                    </div>
                    <div class="col-md-6">
                        @Html.TextBox("ProductName", "", new { id = "ProductName", placeholder = "eg :- Romeo & Juliet", Class = "form-control" })
                    </div>
                </div>
                <div class="row g-3 mt-3">
                    <br />
                    <div class="col-2">
                        <label class="form-label" for="ProductDescription">Product Description</label>
                    </div>
                    <div class="col-md-6">
                        @Html.TextArea("ProductDescription", "", new { id = "ProductDescription", placeholder = "eg :- About The product", Class = "form-control", rows = "4" })
                    </div>
                </div>
                <div class="row g-3 mt-3">
                    <div class="col-2">
                        <label class="form-label" for="Supplier">Supplier</label>
                    </div>
                    <div class="col-md-3">
                        @Html.DropDownList("Supplier", new SelectList(ViewBag.Supplier,"Id", "SupplierName"), "Selct Supplier", new { Class = "form-select" })
                    </div>
                    <div class="col-1"></div>
                    <div class="col-1">
                        <label class="form-label" for="Genre">Genre</label>
                    </div>
                    <div class="col-md-3">
                        @Html.DropDownList("Genre", new SelectList(ViewBag.Genre, "Id", "GerneType"), "Selct Genre", new { Class = "form-select" })
                    </div>
                </div>
                <div class="row g-3 mt-3">
                    <div class="col-2">
                        <label for="Gender" class="form-label">Author</label>
                    </div>
                    <div class="col-md-3">
                        @Html.DropDownList("Author", new SelectList(ViewBag.Author, "Id", "AuthorName"), "Selct Author", new { Class = "form-select" })
                    </div>
                </div>
                <div class="row g-3 mt-3">
                    <div class="col-2">
                        <label for="Price" class="form-label">Price</label>
                    </div>
                    <div class="col-md-3">

                        @Html.TextBox("Price", "", new { id = "Price", Class = "form-control", placeholder = "eg:- 467$ 'Symbol not requried'" })
                    </div>
                </div>
                <div class="row g-3 mt-3">
                    <div class="col-2">
                        <label for="ChooseImage" class="form-label">Choose Cover Image</label>
                    </div>
                    <div class="col-md-3 ">
                        <div class=" ">
                            <input type="file" class="form-control" width="150" id="ChooseImage">
                        </div>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-success w-25 float-end">Save</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

