@model List<Book_Libary.Models.Inventory.Supplier>
@{
    ViewBag.Title = "Supplier";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div style="max-height: 700px; overflow: scroll; overflow-x: hidden; width: 100%; scroll-behavior: smooth; overflow-y: scroll; -ms-overflow-style: none;">
    <h2 class="mx-5 my-3">All Suppliers</h2>
    <div class=" row justify-content-md-center" style="max-height: 450px; overflow: scroll; overflow-x: hidden; width: 100%; scroll-behavior: smooth; overflow-y: scroll; -ms-overflow-style: none;">
        <div class=""></div>
        <table class="table border rounded col mx-4" style="width:95%;">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Supplier Id</th>
                    <th scope="col">Supplier Name</th>
                    <th scope="col">Supplier Mobile No.</th>
                    <th scope="col">Supplier Email</th>
                    <th scope="col">Supplier Description</th>
                    <th scope="col">Supplier Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Book_Libary.Models.Inventory.Supplier i in Model)
                {
                    <tr>
                        <td scope="col">@i.Id</td>
                        <td>@i.SupplierName</td>
                        <td class="def">@i.SupplierPhone</td>
                        <td>@i.SupplierEmail</td>
                        <td>@i.SupplierDescription</td>
                        <td>
                            @Html.ActionLink("Update", "UpdateSupplier", new { Id = i.Id })  ||
                            @Html.ActionLink("Delete", "DeleteId", new { Id = i.Id })
                        </td>
                    </tr>
                }



            </tbody>
        </table>
    </div>
    <div class="w-50 float-end">
        <a href="/AddSupplier" class="btn btn-warning mt-2 ms-2 me-5 float-end w-50">Add Supplier</a>
    </div>
</div>