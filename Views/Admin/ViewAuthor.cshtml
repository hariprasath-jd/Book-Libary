@model List<Book_Libary.Models.Inventory.Author>
@{
    ViewBag.Title = "ViewAuthor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="no_scroll" style="max-height: 700px; overflow: scroll; overflow-x: hidden; width: 100%; scroll-behavior: smooth; overflow-y: scroll; -ms-overflow-style: none;">
    <h2 class="mx-5 my-3">All Authors</h2>
    <div class=" row justify-content-md-center no_scroll" style="max-height: 650px; overflow: scroll; overflow-x: hidden; width: 100%; scroll-behavior: smooth; overflow-y: scroll; -ms-overflow-style: none;">

        <table class="table border rounded col mx-4 no_scroll" style="width:95%;">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Author Id</th>
                    <th scope="col">Author Name</th>
                    <th scope="col">Author Description</th>
                    <th scope="col">Author Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Book_Libary.Models.Inventory.Author i in Model)
                {
                    <tr>
                        <td scope="col">@i.Id</td>
                        <td>@i.AuthorName</td>
                        <td style="width:40%;">@i.AuthorDescription</td>
                        <td>
                            @Html.ActionLink("Update", "UpdateSupplier", new { Id = i.Id })  ||
                            @Html.ActionLink("Delete", "DeleteId", new { Id = i.Id })
                        </td>
                    </tr>
                 }
            </tbody>
        </table>
    </div>
    <div class="w-50 float-end">
        <a href="/AddAuthor" class="btn btn-warning mt-2 ms-2 me-5 float-end w-50">Add Author</a>
    </div>
</div>
