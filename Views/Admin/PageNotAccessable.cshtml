
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Page Not Accessible</title>
    <style>
    body {
      background-color: #f5f5f5;
      font-family: Arial, sans-serif;
      color: #333333;
      text-align: center;
      padding: 50px;
    }

    h1 {
      font-size: 36px;
      margin-bottom: 30px;
    }

    p {
      font-size: 18px;
      margin-bottom: 20px;
    }

    .container {
      background-color: #ffffff;
      border-radius: 10px;
      padding: 30px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      display: inline-block;
    }

    .sad-face {
      font-size: 80px;
      margin-bottom: 30px;
    }

    .message {
      font-size: 24px;
      font-weight: bold;
      margin-bottom: 20px;
    }

    .hint {
      font-size: 16px;
    }

    @@media (max-width: 480px) {
      .container {
        padding: 20px;
      }

      .sad-face {
        font-size: 60px;
      }

      h1 {
        font-size: 28px;
      }

      p {
        font-size: 16px;
      }
    }
    </style>
</head>

<body>
    <div class="container">
        <div class="sad-face">&#9785;</div>
        <h1>Page Not Accessible</h1>
        <p class="message">Oops! It seems like you can't access this page.</p>
        <p class="hint">Seem's Like you need to <a href="Login">login</a> again</p>
    </div>
</body>

</html>

