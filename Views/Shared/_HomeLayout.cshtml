<!DOCTYPE html>

<html>
<head data-bs-theme="dark">
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/ca4cb27df3.js" crossorigin="anonymous"></script>
    <style>
        body {
            scroll-behavior: smooth;
            overflow-y: scroll;
            -ms-overflow-style: none;
        }
        body::-webkit-scrollbar {
            display: none;
        }
    </style>
</head>
<body>
    <header class="p-3 text-bg-dark">
        <div class="">
            <div class="d-flex flex-wrap align-items-center justify-content-center">
                <img src="~/Images/book-stack.png" alt="Icon" height="30" class="navbar-brand me-2" width="30" style="" />
                <a class="navbar-brand col-lg-3 me-0" href="#">Books.Com</a>

                <ul class="nav col-12 col-lg me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li><a href="#" class="nav-link px-2 text-secondary">Home</a></li>
                    <li><a href="#" class="nav-link px-2 text-white">Features</a></li>
                    <li><a href="#" class="nav-link px-2 text-white">Pricing</a></li>
                    <li><a href="#" class="nav-link px-2 text-white">FAQs</a></li>
                    <li><a href="#" class="nav-link px-2 text-white">About</a></li>
                </ul>

                <form class="col-5 col-lg-auto mb-3 mb-lg-0 me-lg-3 m-2" role="search">
                    <input type="search" class="form-control form-control-dark text-bg-dark" placeholder="Search..." aria-label="Search">
                </form>

                <div class="text-end">
                    <button type="button" class="btn btn-success me-2">Seach</button>
                    <button type="button" class="btn btn-outline-danger">LogOut</button>
                </div>
            </div>
        </div>
    </header>

    <div>
        @RenderBody()
    </div>


    <div class=" bg-secondary" style="position:relative;bottom:0px;width:100%;">
        <footer class="d-flex flex-wrap justify-content-between align-items-center py-3  border-top">
            <div class="col-md-4 d-flex align-items-center">
                <a href="/" class="mb-3 me-2 mb-md-0 text-body-secondary text-decoration-none lh-1">
                    <svg class="bi" width="30" height="24"><use xlink:href="#bootstrap"></use></svg>
                </a>
                <span class="mb-3 mb-md-0 text-body-secondary">© 2023 Company, Inc</span>
            </div>

            <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
                <li class="ms-3"><a  href="#"><i style="font-size:24px;"  class="fa-brands fa-facebook"></i></a></li>
                <li class="ms-3"><a href="#"><i class="fa-brands fa-instagram" style="color: #9118e2; font-size: 24px;"></i></a></li>
                <li class="ms-3 me-3"><a class="text-body-secondary" href="#"><i class="fa-brands fa-twitter fa-lg" style="color: #00b3ff;"></i></a></li>
            </ul>
        </footer>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>

</body>
</html>
